<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping auto-import="true" default-lazy="false">
 <class name="accesoadatos.dominio.Persona" table="personas">
  <id name="id" column="id_persona">
   <generator class="identity"/>
  </id>
  <property name="nombre" />
  <set name="aficionesInternas" inverse="true" cascade="all" lazy="true">
   <key column="id_persona"/>
   <one-to-many class="accesoadatos.dominio.Aficion"/>
  </set>
 </class>
</hibernate-mapping>