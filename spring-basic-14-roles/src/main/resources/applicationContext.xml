<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
    <bean id="rol1" class="beans.Rol" p:nombre="Rol 1"/>
    <bean id="rol2" class="beans.Rol" p:nombre="Rol 2"/>
    <bean id="rol3" class="beans.Rol" p:nombre="Rol 3"/>
    <bean id="perfil" class="beans.Perfil"/>
    <bean id="persona" class="beans.Persona" abstract="true" p:nombre="Una persona"/>
    <bean id="usuario" parent="persona" class="beans.Usuario" p:clave="Una Clave" p:perfil-ref="perfil">
        <property name="roles">
            <list>
                <ref bean="rol1"/>
                <ref bean="rol2"/>
                <ref bean="rol3"/>
            </list>
        </property>
    </bean>
</beans>